        </columns>
      </TableView>
      <Label layoutX="359.0" layoutY="27.0" text="Customer Records">
         <font>
            <Font size="23.0" />
         </font>
      </Label>
      <Button fx:id="addCustomerButton" layoutX="209.0" layoutY="572.0" mnemonicParsing="false" onAction="#onCustomerAdd" text="Add New" />
